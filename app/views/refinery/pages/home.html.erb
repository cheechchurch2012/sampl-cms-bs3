<div class="container well" style="background: white;">
  <div class="wrapper" style="background: white;">

    <div id="homepage-header">
      <p>Innovation Policy Simulation for the Smart Economy (IPSE)</p>
    </div>

    <div id="header_logos" class="row">
      <div id="logos" class="span8">
        <img style="width: 53px; height: 78px;" alt="UCD" src="/assets/logo_ucd.jpg">
        <img style="width: 196px; height: 35px;" alt="IRU" src="/assets/logo_iru.jpg">
      </div>
      <div id="more_logos" class="span4">
        <div class="well">
          <section id='content_more_logos'>
            <%=raw @page.content_for(:logo) %>
          </section>
          <img style="width: 110px; height: 28px" alt="PRTLI" src="/assets/logo_prtli.jpg">
        </div>
      </div>
    </div>

    <div id="motto" class="row">
      <div class="span12">
        <section id='content_motto'>
          <%=raw @page.content_for(:motto) %>
        </section>
      </div>
    </div>

    <div id="banner" class="hero-unit">
      <div id="content" class="row">
        <div id="intro" class="span5 offset1">
          <h2>Innovation Policy Simulation for the Smart Economy (IPSE)</h2>
          <section id='content_banner'>
            <%=raw @page.content_for(:body) %>
          </section>
          <p><a class="btn primary large" href="/about">Learn more &raquo;</a></p>
        </div>
        <div id="carousel" class="span4">
          <!-- Carousel -->
          <div id="Gallery" class="carousel slide">
            <!-- Carousel items -->
            <div class="carousel-inner">
              <div class="active item"><img alt="" src="/assets/carousel_tree.png"></div>
              <div class="item"><img alt="" src="/assets/carousel_lcf.png"></div>
              <div class="item"><img alt="" src="/assets/carousel_population.png"></div>
            </div>
            <!-- Carousel nav -->
            <a class="carousel-control left" href="#Gallery" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#Gallery" data-slide="next">&rsaquo;</a>
          </div> <!-- Carousel -->
        </div>
      </div>
    </div>

    <div id="doormats" class="row">
      <div id="menu" class="span3 well">
        <!-- Doormat  menu -->
        <ul class="nav nav-list">
          <li class="nav-header"><a href="partners">PARTNERS</a></li>
          <li class="nav-header"><a href="workshops">WORKSHOPS</a></li>
          <li class="nav-header"><a href="ipse-lecture-series">IPSE LECTURE SERIES</a></li>
          <li class="divider"></li>
          <% if signed_in_member? %>
          <li class="nav-header"><%= link_to "MEMBERS", "secure_pages/home" %></li>
          <li class="nav-header"><%= link_to "ACCOUNT", main_app.edit_member_path(current_member) %></li>
          <li class="divider"></li>
          <li><%= link_to "Sign out", main_app.signout_path, method: "delete" %></li>
          <% else %>
          <li><%= link_to "Sign in", main_app.signin_path %></li>
          <% end %>
          <li class="divider"></li>
          <p>Follow us on</p>
          <!-- Social icons -->
          <div class="social_icons">
            <a href="http://www.facebook.com/pages/IPSE/383610961706781" target=_blank>
              <img alt="Like us on Facebook" src="/assets/social_facebook.png">
            </a>
            <a href="http://twitter.com/#!/IPSE_IRU" target=_blank>
              <img alt="Follow us on Twitter" src="/assets/social_twitter.png">
            </a>
            <a href="http://www.linkedin.com/groups/Innovation-Policy-Simulation-Smart-Economy-4515718?gid=4515718&trk=hb_side_g" target=_blank>
              <img alt="Follow us on LinkedIn" src="/assets/social_linkedin.png">
            </a>
          </div> <!-- Social icons -->
        </ul> <!-- Doormat menu -->
      </div>

      <div id="work" class="span3 well">
        <!-- Doormat work -->
        <ul class="nav nav-list">
          <li class="nav-header">WORK PACKAGES</li>
          <li class="divider"></li>
          <li><h4><a href="sp1">&raquo; IRU's Computational Policy Lab</a></h4></li>
          <li class="divider"></li>
          <li><h4><a href="sp2">&raquo; Sectoral and geographical aspects of innovation</a></h4></li>
          <li class="divider"></li>
          <li><h4><a href="sp3">&raquo; Firm level innovation and entrepreneurship</a></h4></li><hl>
        </ul> <!-- Doormat work -->
      </div>

      <div id="announcements" class="span3 well">
        <% @items = Refinery::News::Item.latest(5) %>
        <%= render :partial => '/refinery/news/items/recent_posts' %>
      </div>
    </div>
    
    <div id="homepage-footer">
      <p>Innovation Policy Simulation for the Smart Economy (IPSE)</p>
    </div>

